{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">

  <div class="table-header">
    <a href="/members/create">Novo</a>

    <form action="/members" method="GET">
      <input type="text" name="filter" value="{{ filter }}" placeholder="Nome ou Email">
      <button type="submit">Filtrar</button>
    </form>
  </div>

  <table width="100%">
    <thead>
      <tr>
        <th>Membro</th>
        <th>E-mail</th>
        <th>Peso</th>
        <th>Altura</th>
        <th>Ações</th>
      </tr>
    </thead>

    <tbody>
      {% for member in members %}
        <tr>
          <td>
            <span style="background-image: url({{ member.avatar_url }})"></span>
            {{ member.name }}
          </td>
          <td>{{ member.email }}</td>
          <td>{{ member.weight }}kg</td>
          <td>{{ member.height }}cm</td>
          <td><a href="/members/{{ member.id }}">Ver</a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <div class="pagination"
    data-page={{ pagination.page }}
    data-total={{ pagination.total }}
    data-filter={{ filter }}
  >
  </div>
</div>
{% endblock %}
